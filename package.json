{
  "type": "module",
  "private": "true",
  "version": "0.0.0",
  "main": "public/index.js",
  "scripts": {
    "lint": "standardx -v \"./**/*.ts\"",
    "build-tests": "esbuild test/index.ts --bundle --format=cjs --keep-names > test/test-bundle.js",
    "test": "npm run lint && npm run build && npm run build-tests && npm run test-tape-run",
    "test-tape-run": "cat test/index.html | tape-run --input=html --static=test | tap-arc",
    "build": "mkdir -p ./public && rm -rf ./public/* && vite build",
    "start": "NODE_ENV=DEV concurrently --kill-others \"NODE_ENV=DEV npx ntl functions:serve --port=9999 --debug\" \"npx vite\"",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@netlify/functions": "^2.4.0",
    "@nichoth/components": "^0.9.1",
    "@nichoth/routes": "^3.0.7",
    "@preact/signals": "^1.2.1",
    "htm": "^3.1.1",
    "nanoid": "^5.0.3",
    "pg": "^8.11.3",
    "pg-promise": "^11.5.4",
    "preact": "^10.18.1",
    "pusher": "^5.1.3",
    "pusher-js": "^8.3.0",
    "replicache": "^13.0.1",
    "replicache-transaction": "^0.3.1",
    "route-event": "^4.1.10",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nichoth/debug": "^0.2.8",
    "@nichoth/tapzero": "^0.8.4",
    "@preact/preset-vite": "^2.7.0",
    "@types/node": "^20.9.0",
    "@typescript-eslint/parser": "^5.55.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.5",
    "netlify-cli": "^17.2.2",
    "postcss-nesting": "^12.0.1",
    "standardx": "^7.0.0",
    "tap-arc": "^1.2.2",
    "tape-run": "^11.0.0",
    "typescript": "^5.0.2",
    "vite": "^5.0.0"
  },
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "license": "AGPL-3.0-or-later"
}
